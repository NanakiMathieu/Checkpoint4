{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error"],
        "react/function-component-definition": "warn",
        "no-console": "warn",
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "react/jsx-props-no-spreading": "off",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./src"]
            }
        }
    }
}
